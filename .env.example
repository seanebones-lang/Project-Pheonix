# Environment Variables for Mothership AIs

# Database Configuration
DATABASE_URL=postgresql://mothership:mothership_password@localhost:5432/mothership
REDIS_URL=redis://localhost:6379
RABBITMQ_URL=amqp://mothership:mothership_password@localhost:5672

# AI Provider API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
CLAUDE_API_KEY=sk-your-claude-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Application Configuration
ENVIRONMENT=development
METRICS_PORT=8001
LOG_LEVEL=INFO

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Monitoring
OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Kubernetes Configuration (for production)
KUBECONFIG=~/.kube/config
HELM_REPO_URL=https://charts.bitnami.com/bitnami
